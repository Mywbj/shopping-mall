
.detail_Tbas {
  width: 100%;
  height: 90rpx;
  background: #FDFEFD;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  border-top: 1rpx solid #CBCCCB;
  display: flex;
  text-align: center;
}

.left_detail_tbas {
  display: flex;
  flex: 2;
  font-size: 26rpx;
}
.left_detail_tbas .item_view {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 24rpx;
}
.left_detail_tbas .item_view image {
  width: 36rpx;
}
.right_detail_tbas {
  flex: 2;
}
.right_detail_tbas>view {
  display: flex;
  font-size: 28rpx;
  font-weight: 700;
  color: #fff;
}
.right_detail_tbas>view>view {
  flex: 1;
  line-height: 90rpx;
}
.right_detail_tbas>view>view:nth-of-type(1) {
  background: #FFA300;
}
.right_detail_tbas>view>view:nth-of-type(2) {
  background: #F9544E;
}