/* pages/goods_list/index.wxss */
.goods_tab {
}
.goods_tab>.goods_item {
  display: flex;
  border-bottom: 1px solid #ccc;
}
.goods_tab>.goods_item>.goods_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods_tab>.goods_item>.goods_img_wrap>image {
  width: 80%;
}
.goods_tab>.goods_item>.goods_info_wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goods_tab>.goods_item>.goods_info_wrap>.goods_name {
  font-size: 32rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_tab>.goods_item>.goods_info_wrap>.goods_price {
  color: #F68767;
  font-size: 34rpx;
}
