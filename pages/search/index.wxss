/* pages/search/index.wxss */
page {
  background: #DFDEDF;
}
.search .search-box {
  background: #fff;
  display: flex;
  padding: 10rpx 0;
  padding-left: 15rpx;
}
.search .search-box input {
  flex: 6;
  padding: 15rpx 25rpx;
  border: 4rpx solid #FB5350;
  border-radius: 40rpx;
}
.search .search-box text {
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
  color: #4b4b4b;
}
.search .search-box text:hover {
  color: #7a7a7a;
}
.search-wrap {
  position: relative;
  margin-top: 20rpx;
}
.search-wrap .search-content {
  width: 95%;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}
.search-wrap .search-content .search-goods-item {
  padding: 10rpx 15rpx;
  border-bottom: 1px solid #ccc;
  background: #fff;
}
